<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="HOME_LOG_ENROLAMIENTO" value="enrolamiento/logs/enrolamiento.log"/>
    <appender name="FILE-ROLLING-ENROLAMIENTO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${HOME_LOG_ENROLAMIENTO}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>enrolamiento/logs/archived/enrolamiento.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level  [%X{transaccion:-FINCOMUN}]  %logger{0} - %method : %line - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.fincomun" level="debug" additivity="true">
        <appender-ref ref="FILE-ROLLING-ENROLAMIENTO"/>
    </logger>
    
    <root level="debug"/>
    
</configuration>